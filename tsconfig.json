{
  "compilerOptions": {
    "removeComments": false,
    "experimentalDecorators": true,
    "sourceMap": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "typeRoots": [
      "node_modules/@types",
      "node_modules/disord.js/typings"
    ],
    "lib": [
      "es6"
    ],
    "target": "es6",
    "module": "commonjs"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "typings",
    "dist"
  ]
}
